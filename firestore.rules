rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---
    // Checks if the user is in the 'dashboard_users' whitelist
    function isDashboardAdmin() {
      return request.auth != null && 
             request.auth.token.email != null && 
             exists(/databases/$(database)/documents/dashboard_users/$(request.auth.token.email));
    }

    // --- DASHBOARD ACCESS CONTROL ---
    // Allow admins to view/manage the list of authorized users
    match /dashboard_users/{document} {
      allow read, write: if isDashboardAdmin();
    }

    // --- GAME APP RULES ---

    // Allow authenticated users to read the top-level 'playlist' collection
    match /playlist/{document=**} {
      allow read: if request.auth != null;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow users to read their own data, and allow any authenticated user to read 
      // (needed for leaderboards and multiplayer features)
      allow read: if request.auth != null;
      
      // Only allow users to write their own data
      allow write: if request.auth != null && request.auth.uid == userId;

      match /playlists/{playlistId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for the 'games' collection
    match /games/{gameId} {
      allow read, write: if request.auth != null;
    }

    // Rules for app configuration - allow all users to read
    match /app_config/{document=**} {
      allow read: if true;
      // Allow dashboard admins to write, otherwise false
      allow write: if isDashboardAdmin();
    }

    // Rules for QR playlists
    match /qr_playlists/{document=**} {
      // Allow public read (for the Game App/Players)
      allow read: if true;
      
      // Allow Dashboard Admins (You) to create folders/delete playlists from the Web App.
      // (Cloud Functions bypass this, but your 'Create Folder' button is client-side)
      allow write: if isDashboardAdmin();
    }
  }
}
